<div class="d-flex flex-column justify-content-between align-items-center">
  <h2>Entrar</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field pb-4">
    <%= f.label :email, class: 'pe-3' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field pb-2">
    <%= f.label 'Senha', class: 'pe-3' %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  
  <% if devise_mapping.rememberable? %>
  <div class="field pb-2">
    <%= f.check_box :remember_me %>
    <%= f.label 'lembrar' %>
  </div>
  <% end %>
  
  <div class="actions w-100">
    <%= f.submit "Acessar", class: 'w-100 btn btn-outline-dark' %>
  </div>
  <div class="d-flex flex-column align-items-end mt-4">
    <%= link_to "NÃ£o tem uma conta? Cadastre-se", new_registration_path(resource_name) %><br />
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
  </div>
  <% end %>
</div>
